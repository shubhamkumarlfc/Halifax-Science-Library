

@model IEnumerable<HalifaxScienceLibrary_Project.buy_items>

@{
    ViewBag.Title = "buy_item_table_view";
}

<h2>Buy More Items </h2>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.item.C_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.transaction.date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.item.C_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.transaction.date)
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to List", "DisplayTables")
</div>