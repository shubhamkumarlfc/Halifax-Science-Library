

@model IEnumerable<HalifaxScienceLibrary_Project.transaction>

@{
    ViewBag.Title = "transaction_table_view";
}

<h2>transaction_table_view</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customer.fname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customer.fname)
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back to List", "DisplayTables")
</div>
