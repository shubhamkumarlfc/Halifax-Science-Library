@model IEnumerable<HalifaxScienceLibrary_Project.transaction>

@{
    ViewBag.Title = "Index";
}

<h2>Transactions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<br />
<div class="form-group">
    <label class="field-validation-error"> @ViewBag.ErrorMessage</label>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customer.fname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customer.fname)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.trn_code }) |
                @Html.ActionLink("Details", "Details", new { id = item.trn_code }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.trn_code })
            </td>
        </tr>
    }

</table>
